<?xml version="1.0"?>
<robot name="table">

  <!-- Materials -->
  <material name="brown">
    <color rgba="0.54 0.27 0.07 1.0"/>
  </material>

  <material name="light_grey">
    <color rgba="0.8 0.8 0.8 1.0"/>
  </material>

  <!-- World Link -->
  <link name="world"/>

  <!-- Table Top -->
  <link name="top">
    <visual>
      <origin xyz="0 0 -0.025" rpy="0 0 0"/>
      <geometry>
        <box size="2 1 0.05"/>
      </geometry>
      <material name="brown"/>
    </visual>
  </link>

  <joint name="world_to_top" type="fixed">
    <parent link="world"/>
    <child link="top"/>
    <origin xyz="0 0 1.0" rpy="0 0 0"/>
  </joint>

  <!-- Leg 1 -->
  <link name="leg1">
    <visual>
      <origin xyz="0 0 -0.475" rpy="0 0 0"/>
      <geometry>
        <cylinder radius="0.05" length="0.95"/>
      </geometry>
      <material name="light_grey"/>
    </visual>
  </link>

  <joint name="top_to_leg1" type="fixed">
    <parent link="top"/>
    <child link="leg1"/>
    <origin xyz="0.9 0.4 0" rpy="0 0 0"/>
  </joint>

  <!-- Leg 2 -->
  <link name="leg2">
    <visual>
      <origin xyz="0 0 -0.475" rpy="0 0 0"/>
      <geometry>
        <cylinder radius="0.05" length="0.95"/>
      </geometry>
      <material name="light_grey"/>
    </visual>
  </link>

  <joint name="top_to_leg2" type="fixed">
    <parent link="top"/>
    <child link="leg2"/>
    <origin xyz="-0.9 0.4 0" rpy="0 0 0"/>
  </joint>


  <!-- Leg 3 -->
  <link name="leg3">
    <visual>
      <origin xyz="0 0 -0.475" rpy="0 0 0"/>
      <geometry>
        <cylinder radius="0.05" length="0.95"/>
      </geometry>
      <material name="light_grey"/>
    </visual>
  </link>

  <joint name="top_to_leg3" type="fixed">
    <parent link="top"/>
    <child link="leg3"/>
    <origin xyz="0.9 -0.4 0" rpy="0 0 0"/>
  </joint>


  <!-- Leg 4 -->
  <link name="leg4">
    <visual>
      <origin xyz="0 0 -0.475" rpy="0 0 0"/>
      <geometry>
        <cylinder radius="0.05" length="0.95"/>
      </geometry>
      <material name="light_grey"/>
    </visual>
  </link>

  <joint name="top_to_leg4" type="fixed">
    <parent link="top"/>
    <child link="leg4"/>
    <origin xyz="-0.9 -0.4 0" rpy="0 0 0"/>
  </joint>

</robot>

